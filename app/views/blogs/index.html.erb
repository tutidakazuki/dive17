<p id="notice"><%= notice %></p>

<h1>ブログ　管理画面</h1>

<table>
  <thead>
    <tr>
      <th>ステータス</th>
      <th>タイトル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <% if blog.status == 2 %>
        <td>公開済みブログ</td>
        <td><%= blog.title %></td>
        <td><%= link_to 'ブログの詳細', blog %></td>
        <td><%= link_to 'ブログの編集', edit_blog_path(blog) %></td>
        <% end %>
        <% if blog.status == 3 %>
        <td>公開済みブログ(編集済み)</td>
        <td><%= blog.title %></td>
        <td><%= link_to 'ブログの詳細', blog %></td>
        <td><%= link_to 'ブログの編集', edit_blog_path(blog) %></td>
        <td><%= link_to 'ブログを削除', blog_path(blog.id),method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>管理メニュー</h2>
<ul>
  <li><%= link_to '新しくブログを作る', new_blog_path %></li>
  <li><%= link_to '下書きブログ一覧', draft_blogs_path %></li>
  <li><%= link_to '削除済みブログ一覧', deleted_blogs_path %></li>
</ul>
